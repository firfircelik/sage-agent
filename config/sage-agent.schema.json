{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sage Agent Configuration",
  "type": "object",
  "properties": {
    "rlm": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean", "default": true },
        "cache_dir": { "type": "string", "default": ".rlm_cache" },
        "cache_ttl": { "type": "integer", "minimum": 0, "default": 3600 }
      },
      "additionalProperties": true
    },
    "providers": {
      "type": "object",
      "properties": {
        "openai": { "type": "object" },
        "anthropic": { "type": "object" },
        "deepseek": { "type": "object" }
      },
      "additionalProperties": true
    },
    "opencode": {
      "type": "object",
      "properties": {
        "plugin_enabled": { "type": "boolean", "default": true }
      },
      "additionalProperties": true
    },
    "claude_code": {
      "type": "object",
      "properties": {
        "mcp_enabled": { "type": "boolean", "default": true }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
